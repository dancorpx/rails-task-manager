<%= form_for @task do |f| %>
  <%= f.label :title, "Enter a task title" %>
  <%= f.text_field :title %>
  <%= f.label :details, "Enter task details" %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
